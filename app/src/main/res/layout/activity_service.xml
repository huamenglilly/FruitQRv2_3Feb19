<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:id="@+id/layoutDrawerLayout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ServiceActivity">

    <!--Content-->
     <LinearLayout
         android:orientation="vertical"
         android:layout_width="match_parent"
         android:layout_height="match_parent">

         <!--Tooolbar--> <!--Tsupport.v7.widget.Toolbar-->

         <android.support.v7.widget.Toolbar
             android:id="@+id/toobarService"
             android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
             android:background="@color/colorPrimary"
             android:layout_width="match_parent"
             android:layout_height="?attr/actionBarSize"></android.support.v7.widget.Toolbar>


         <!--Fragment-->
         <FrameLayout
             android:id="@+id/contentServiceFragment"
             android:layout_width="match_parent"
             android:layout_height="match_parent"/>


     </LinearLayout>





    <!--DrawerLayout-->         <!--android:layout_gravity="start"  ทำให้มีแถยด้านข้างสีขาว-->

    <LinearLayout
        android:padding="8dp"
        android:layout_gravity="start"
        android:background="#ffffff"
        android:orientation="vertical"
        android:layout_width="320dp"
        android:layout_height="match_parent">

        <ImageView
            android:src="@drawable/masterung_round"
            android:scaleType="centerInside"
            android:layout_width="match_parent"
            android:layout_height="150dp" />

        <TextView
            android:textStyle="bold"
            android:textSize="24sp"
            android:text="Drawer Menu :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--Icon-->
            <ImageView
                android:src="@drawable/ic_action_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!--Title-->
            <TextView
                android:textSize="@dimen/h2"
                android:text="About Me"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>



    </LinearLayout>

</android.support.v4.widget.DrawerLayout>